                    </div>
                    <div class="form-group">
                        <label >姓名：</label>
                        <input type="text" class="form-control" id="customer_name2" style="width: 60%;" disabled="true">
                    </div>
                    <div class="form-group">
                        <label >手机：</label>
                        <input type="text" class="form-control" id="phone2" style="width: 60%;" disabled="true">
                    </div>
                    <div class="form-group">
                        <label >身份证：</label>
                        <input type="text" class="form-control" id="identity2" style="width: 60%;" disabled="true">
                    </div>
                    <div class="form-group">
                        <label >备注：</label>
                        <input type="textarea" class="form-control" id="remark2" style="width: 60%;" disabled="true">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#search').click(function(){
                let market_type = $('#market_type').val();
                let floor = $('#floor').val();
                let stall_name = $('#stall_name').val();
                let customer_name = $('#customer_name').val();
                console.log("market_type", market_type);
                console.log("floor", floor);
                console.log("stall_name", stall_name);
                console.log('customer_name', customer_name);
                window.location.href = `/query/stall?market_type=${market_type}&floor=${floor}&stall_name=${stall_name}&customer_name=${customer_name}`;
            });

            $('#importBtn').click(function(){
                const file = document.getElementById('file1');
                console.log("file", file);
                if(file.files[0] == "" || file.files[0] == undefined){
                    alert("请先选择文件");
                }else{   
                    const formData = new FormData();
                    formData.append("excel", file.files[0]);
                    console.log("import", file);
                    console.log("import2", file.files[0]);
                    $.ajax({
                        url: "/stall/excel/import",
                        type: "post",
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function(result){
                            if(result.info){
                                alert("导入成功");
                                window.location.href= "/stall";
                            }
                        },
                        error: function(err){
                            console.log("err", err);
                        }
                    });
                }
            });

            $('#exportBtn').click(function(){
                const start = $('#start').val();
                const end = $('#end').val();
                if(start=="" || end == ""){
                    alert("导出的范围请填完整");
                }else{
                    console.log("start", start);
                    console.log("end", end);
                    window.location.href = "/stall/excel/export/"+start+"/"+end;
                }
            });
        });
        function lookMsg(id){
            $.get("/query/stall/"+id, function(result){
                if(result.info){
                    const stall_detail = result.stall_detail;
                    console.log("stall_detail", stall_detail);
                    $("#customer_type2").val(stall_detail.customer_type);
                    $("#market_type2").val(stall_detail.market_type);
                    $("#floor2").val(stall_detail.floor);
                    $("#stall_name2").val(stall_detail.stall_name);
                    $("#customer_name2").val(stall_detail.customer_name);
                    $("#phone2").val(stall_detail.phone);
                    $("#identity2").val(stall_detail.identity_card);
                    const remark2 = stall_detail.remark.join(",\n");
                    $("#remark2").val(remark2);
                    $('#myModal').modal();
                }
            })
        }
    </script>
